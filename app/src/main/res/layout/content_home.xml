<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sked.com.generalpreparation.HomeActivity"
    tools:showIn="@layout/app_bar_home"
    android:padding="@dimen/actionBarTitle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:id="@+id/topPanel">

        <android.support.v7.widget.CardView
            android:id="@+id/ssc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            app:cardCornerRadius="2dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_shadow"
    android:descendantFocusability="blocksDescendants">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_margin="2dp"
                android:src="@drawable/ias" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="24dp"
                android:layout_margin="2dp"
                android:text="IAS"
                android:gravity="center"
                android:textColor="#E53935"/>
</LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/rrb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="2dp"
            android:layout_margin="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_shadow"
                android:descendantFocusability="blocksDescendants">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/ssc"
                    android:layout_margin="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textSize="24dp"
                    android:layout_margin="2dp"
                    android:text="SSC"
                    android:gravity="center"
                    android:textColor="#E53935"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/ias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="2dp"
            android:layout_margin="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_shadow"
                android:descendantFocusability="blocksDescendants">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/ibps" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textSize="24dp"
                    android:layout_margin="2dp"
                    android:text="IBPS"
                    android:gravity="center"
                    android:textColor="#E53935"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@+id/topPanel">


        <android.support.v7.widget.CardView
            android:id="@+id/banking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="2dp"
            android:layout_margin="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_shadow"
                android:descendantFocusability="blocksDescendants">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/rrb" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textSize="24dp"
                    android:layout_margin="2dp"
                    android:text="RRB"
                    android:gravity="center"
                    android:textColor="#E53935"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/nda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="2dp"
            android:layout_margin="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_shadow"
                android:descendantFocusability="blocksDescendants">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/nda" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textSize="24dp"
                    android:layout_margin="2dp"
                    android:text="NDA"
                    android:gravity="center"
                    android:textColor="#E53935"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/insurance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="2dp"
            android:layout_margin="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_shadow"
                android:descendantFocusability="blocksDescendants">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/insurance" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textSize="24dp"
                    android:layout_margin="2dp"
                    android:text="NIC"
                    android:gravity="center"
                    android:textColor="#E53935"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>
